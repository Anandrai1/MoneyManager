<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".investments.AddInvestmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_touch"
            android:layout_below="@+id/selection">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:animateLayoutChanges="true"
                    android:animationCache="true"
                    android:fadingEdge="vertical"
                    android:focusableInTouchMode="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:paddingBottom="1dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd=".05dp"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1.4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="false"
                                android:text="@string/date"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="0dp"
                                android:layout_marginStart="0.5dp"
                                android:layout_weight=".6"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="@string/date"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingBottom="1dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd=".05dp"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1.4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="false"
                                android:text="@string/account"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_account"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="0dp"
                                android:layout_marginStart="0.5dp"
                                android:layout_weight=".6"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/tableRow3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingBottom="1dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd=".05dp"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1.4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="false"
                                android:text="Interest Rate"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_category"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="0dp"
                                android:layout_marginStart="0.5dp"
                                android:layout_weight=".6"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingBottom="1dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd=".05dp"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1.4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="false"
                                android:text="Year"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_yesr"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="0dp"
                                android:layout_marginStart="0.5dp"
                                android:layout_weight=".6"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingBottom="1dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd=".05dp"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1.4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="false"
                                android:text="@string/description"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/et_description"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="0dp"
                                android:layout_marginStart="0.5dp"
                                android:layout_weight=".6"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:includeFontPadding="true"
                                android:padding="5dp"
                                android:scrollHorizontally="true"
                                android:singleLine="false"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/tv_toamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/app_name"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_iadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:background="@color/SeaGreen"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_20" />

            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_touch"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/lt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue_600"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="start|center"
                    android:includeFontPadding="true"
                    android:padding="5dp"
                    android:paddingStart="@dimen/dimen_3_10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="false"
                    android:text="Amount"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/ib_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dimen_3_10dp"
                    android:background="@color/transparent"
                    android:src="@android:drawable/ic_menu_edit"
                    android:visibility="gone" />
            </RelativeLayout>

            <include
                layout="@layout/layout_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lt" />

            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rv_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/lt"
                android:scrollbars="vertical"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rv_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/lt"
                android:scrollbars="vertical"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>